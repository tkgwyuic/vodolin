<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:clipToPadding="false"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:id="@+id/item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/edit">
        <TextView
            android:id="@+id/bg_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fontPath="fonts/ionicons.ttf"
            tools:ignore="MissingPrefix"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textSize="@dimen/icon_size"
            android:textColor="#FFFFFF"
            android:text=""/>
        <TextView
            android:id="@+id/bg_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fontPath="fonts/ionicons.ttf"
            tools:ignore="MissingPrefix"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textSize="@dimen/icon_size"
            android:textColor="#FFFFFF"
            android:text=""/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/item_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/list_item"
        android:padding="16dp"
        android:elevation="2dp">

        <FrameLayout
            android:id="@+id/item_label"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true">
            <View
                android:id="@+id/item_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"/>
            <TextView
                android:id="@+id/item_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/icon_size"
                android:gravity="center"
                android:layout_gravity="center"
                fontPath="fonts/ionicons.ttf"
                tools:ignore="MissingPrefix"
                android:textColor="#FFFFFF" />
        </FrameLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="24dp"
            android:textSize="14sp"
            fontPath="fonts/GenShinGothic-Light.ttf"
            tools:ignore="MissingPrefix"
            android:text="Your ToDo"/>

        <TextView
            android:id="@+id/item_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/icon_size"
            fontPath="fonts/ionicons.ttf"
            tools:ignore="MissingPrefix"
            android:text="">

        </TextView>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#DDD"-->
        <!--android:layout_alignParentBottom="true"/>-->

    </RelativeLayout>


</android.support.v7.widget.CardView>
